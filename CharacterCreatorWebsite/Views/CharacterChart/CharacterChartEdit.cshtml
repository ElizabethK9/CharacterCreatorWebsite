@model CharacterCreatorWebsite.Models.CharacterChartClass
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<h2 class="text-center">Edit Character Chart</h2>
<form asp-action="Save" method="post" style="max-width: 700px; margin: auto; padding: 20px; border: 1px solid #ccc; border-radius: 10px;">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="fullName">Full Name:</label>
        <input id="fullName" asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="nicknames">Nicknames:</label>
        <input id="nicknames" asp-for="Nicknames" class="form-control" />
    </div>
    <div class="form-group">
        <label for="gender">Gender:</label>
        <input id="gender" asp-for="Gender" class="form-control" />
    </div>
    <!-- Repeat for all other fields -->
    <button type="submit" class="btn btn-success mt-3">Save</button>
</form>
