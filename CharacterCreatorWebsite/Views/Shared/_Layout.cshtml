<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CharacterCreatorWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CharacterCreatorWebsite.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/wwwroot/js/site.js" defer></script>
</head>
<body>
    <!-- Vertical Sidebar Navigation -->
    <nav id="sidebar">
        <ul class="list-unstyled components">
            <li class="nav-item">
                <a asp-controller="Home" asp-action="Index">
                    <i class="fa fa-home"></i> <!-- Homepage Icon -->
                    <span class="nav-text">Home Page</span>
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="CharacterChart" asp-action="List">
                    <i class="fa fa-file"></i> <!-- Character Chart Icon -->
                    <span class="nav-text">Character Chart</span>
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="CharacterCreation" asp-action="Index">
                    <i class="fa fa-cube"></i> <!-- 3D Character Creation Icon -->
                    <span class="nav-text">3D Character Creation</span>
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="ChatForum" asp-action="Index">
                    <i class="fa fa-comments"></i> <!-- Chat/Forum Icon -->
                    <span class="nav-text">Chat/Forum</span>
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Profile" asp-action="Index">
                    <i class="fa fa-user"></i> <!-- Profile Icon -->
                    <span class="nav-text">Profile</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Header Navigation Bar -->
    <header class="d-flex justify-content-between align-items-center">
        @if (ViewData["IsHomePage"] != null && (bool)ViewData["IsHomePage"])
        {
            <h1>Character Creations!</h1>
            <div class="auth-buttons">
                <a class="btn btn-primary" asp-controller="Profile" asp-action="Login">Login</a>
                <a class="btn btn-secondary" asp-controller="Profile" asp-action="Register">Register</a>
            </div>
        }
    </header>

    <!-- Main Content Area -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (ViewData["IsHomePage"] != null && (bool)ViewData["IsHomePage"])
    {
        <h3>Welcome to my Character Creation Website, where you can create your characters either from scratch or from different fandoms.</h3>
    }


    <!-- Footer Section -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CharacterCreatorWebsite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('#sidebar').hover(function () {
                $(this).addClass('expanded');
            }, function () {
                $(this).removeClass('expanded');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
